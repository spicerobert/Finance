    "class TechnicalScorer:\n",
    "    \"\"\"技術指標評分系統 - 修改版（移除成交量評分，改為5分制）\"\"\"\n",
    "    \n",
    "    @staticmethod\n",
    "    def calculate_technical_score(df, ma_dict, rsi, macd_line, signal_line, histogram, \n",
    "                                bb_upper, bb_middle, bb_lower, k_values, d_values, \n",
    "                                volume_info, latest_close):\n",
    "        \"\"\"\n",
    "        計算5項技術指標評分（移除成交量評分）\n",
    "        每項指標：多頭+1分，空頭-1分，中性0分\n",
    "        總分範圍：-5 到 +5\n",
    "        \"\"\"\n",
    "        scores = {}\n",
    "        total_score = 0\n",
    "        \n",
    "        # 1. 均線排列評分 (-1 to +1)\n",
    "        ma_strength = 0\n",
    "        if pd.notna(ma_dict[\"MA5\"].iloc[-1]) and pd.notna(ma_dict[\"MA20\"].iloc[-1]):\n",
    "            if latest_close > ma_dict[\"MA5\"].iloc[-1] > ma_dict[\"MA20\"].iloc[-1]:\n",
    "                ma_strength += 1\n",
    "            elif latest_close < ma_dict[\"MA5\"].iloc[-1] < ma_dict[\"MA20\"].iloc[-1]:\n",
    "                ma_strength -= 1\n",
    "        \n",
    "        if pd.notna(ma_dict[\"MA20\"].iloc[-1]) and pd.notna(ma_dict[\"MA60\"].iloc[-1]):\n",
    "            if ma_dict[\"MA20\"].iloc[-1] > ma_dict[\"MA60\"].iloc[-1]:\n",
    "                ma_strength += 0.5\n",
    "            else:\n",
    "                ma_strength -= 0.5\n",
    "        \n",
    "        ma_score = 1 if ma_strength >= 1 else (-1 if ma_strength <= -1 else 0)\n",
    "        scores['均線排列'] = ma_score\n",
    "        total_score += ma_score\n",
    "        \n",
    "        # 2. RSI評分 (-1 to +1)\n",
    "        rsi_score = 0\n",
    "        if pd.notna(rsi.iloc[-1]):\n",
    "            rsi_val = rsi.iloc[-1]\n",
    "            if 50 < rsi_val < 80:  # 強勢但未過熱\n",
    "                rsi_score = 1\n",
    "            elif 20 < rsi_val < 50:  # 弱勢但未超賣\n",
    "                rsi_score = -1\n",
    "            # RSI > 80 或 < 20 視為中性（可能反轉）\n",
    "        \n",
    "        scores['RSI'] = rsi_score\n",
    "        total_score += rsi_score\n",
    "        \n",
    "        # 3. MACD評分 (-1 to +1)\n",
    "        macd_score = 0\n",
    "        if pd.notna(macd_line.iloc[-1]) and pd.notna(signal_line.iloc[-1]):\n",
    "            macd_val = macd_line.iloc[-1]\n",
    "            signal_val = signal_line.iloc[-1]\n",
    "            \n",
    "            if macd_val > signal_val and macd_val > 0:\n",
    "                macd_score = 1  # 多頭排列且在零軸上方\n",
    "            elif macd_val < signal_val and macd_val < 0:\n",
    "                macd_score = -1  # 空頭排列且在零軸下方\n",
    "        \n",
    "        scores['MACD'] = macd_score\n",
    "        total_score += macd_score\n",
    "        \n",
    "        # 4. 布林通道評分 (-1 to +1)\n",
    "        bb_score = 0\n",
    "        if pd.notna(bb_upper.iloc[-1]) and pd.notna(bb_lower.iloc[-1]):\n",
    "            bb_mid = bb_middle.iloc[-1]\n",
    "            bb_up = bb_upper.iloc[-1]\n",
    "            bb_low = bb_lower.iloc[-1]\n",
    "            \n",
    "            # 位於通道上半部且未觸及上軌 = 多頭\n",
    "            if bb_mid < latest_close < bb_up:\n",
    "                bb_score = 1\n",
    "            # 位於通道下半部且未觸及下軌 = 空頭  \n",
    "            elif bb_low < latest_close < bb_mid:\n",
    "                bb_score = -1\n",
    "            # 觸及上軌或下軌視為中性（可能反轉）\n",
    "        \n",
    "        scores['布林通道'] = bb_score\n",
    "        total_score += bb_score\n",
    "        \n",
    "        # 5. KD指標評分 (-1 to +1)\n",
    "        kd_score = 0\n",
    "        if pd.notna(k_values.iloc[-1]) and pd.notna(d_values.iloc[-1]):\n",
    "            k_val = k_values.iloc[-1]\n",
    "            d_val = d_values.iloc[-1]\n",
    "            \n",
    "            # KD在中性區間且黃金交叉 = 多頭\n",
    "            if 20 < k_val < 80 and 20 < d_val < 80 and k_val > d_val:\n",
    "                kd_score = 1\n",
    "            # KD在中性區間且死亡交叉 = 空頭\n",
    "            elif 20 < k_val < 80 and 20 < d_val < 80 and k_val < d_val:\n",
    "                kd_score = -1\n",
    "            # 高檔鈍化檢查\n",
    "            elif k_val > 80 and d_val > 80:\n",
    "                # 檢查是否持續3天以上\n",
    "                recent_k = k_values.iloc[-3:]\n",
    "                recent_d = d_values.iloc[-3:]\n",
    "                if all(k > 80 and d > 80 for k, d in zip(recent_k, recent_d)):\n",
    "                    kd_score = 1  # 高檔鈍化視為強勢\n",
    "            # 低檔鈍化檢查  \n",
    "            elif k_val < 20 and d_val < 20:\n",
    "                recent_k = k_values.iloc[-3:]\n",
    "                recent_d = d_values.iloc[-3:]\n",
    "                if all(k < 20 and d < 20 for k, d in zip(recent_k, recent_d)):\n",
    "                    kd_score = -1  # 低檔鈍化視為弱勢\n",
    "        \n",
    "        scores['KD指標'] = kd_score\n",
    "        total_score += kd_score\n",
    "        \n",
    "        # 注意：成交量不再計入評分，但仍保留分析功能供參考\n",
    "        \n",
    "        return total_score, scores\n",
    "    \n",
