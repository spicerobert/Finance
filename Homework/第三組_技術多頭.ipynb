    "                    volume_emoji = \"🟡放量盤整\"\n",
    "            elif volume_info['is_low_volume']:\n",
    "                if volume_info['price_trend'] == 'up':\n",
    "                    volume_emoji = \"🟠量縮上漲 (觀察)\"\n",
