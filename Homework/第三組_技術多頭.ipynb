    "    \n",
    "    @staticmethod\n",
    "    def fetch_stock_month_data(stock_id, year, month):\n",
    "        \"\"\"獲取單月股票資料\"\"\"\n",
    "        try:\n",
    "            date_str = f\"{year}{month:02d}01\"\n",
    "            url = f\"https://www.twse.com.tw/exchangeReport/STOCK_DAY?response=json&date={date_str}&stockNo={stock_id}\"\n",
    "            \n",
    "            resp = requests.get(url, timeout=10)\n",
    "            resp.encoding = 'utf-8'\n",
    "            data = resp.json()\n",
    "            \n",
    "            if data['stat'] != 'OK':\n",
    "                return pd.DataFrame()\n",
    "                \n",
    "            df = pd.DataFrame(data['data'], columns=[\n",
    "                '日期', '成交股數', '成交金額', '開盤價',\n",
    "                '最高價', '最低價', '收盤價', '漲跌價差', '成交筆數'\n",
    "            ])\n",
    "            return df\n",
    "            \n",
    "        except Exception as e:\n",
    "            logger.error(f\"獲取股票資料失敗 {stock_id} {year}/{month}: {e}\")\n",
    "            return pd.DataFrame()\n",
    "    \n",
    "    @classmethod\n",
    "    def get_full_stock_data(cls, stock_id, months=9):\n",
    "        \"\"\"獲取完整股票資料\"\"\"\n",
    "        # 先檢查快取\n",
    "        cached_data = stock_cache.get(stock_id)\n",
    "        if cached_data is not None:\n",
    "            return cached_data\n",
    "        \n",
    "        today = datetime.now()\n",
    "        all_data = pd.DataFrame()\n",
    "        \n",
    "        for i in range(months):\n",
    "            month_date = today - pd.DateOffset(months=i)\n",
    "            year = month_date.year\n",
    "            month = month_date.month\n",
    "            df = cls.fetch_stock_month_data(stock_id, year, month)\n",
    "            all_data = pd.concat([all_data, df], ignore_index=True)\n",
    "            time.sleep(0.1)  # 避免請求過於頻繁\n",
    "        \n",
    "        if all_data.empty:\n",
    "            return pd.DataFrame()\n",
    "        \n",
    "        # 資料處理\n",
    "        all_data = all_data.drop_duplicates(subset=['日期'])\n",
    "        all_data = all_data.sort_values('日期')\n",
    "        \n",
    "        # 數值轉換\n",
    "        numeric_columns = ['成交股數', '成交金額', '開盤價', '最高價', '最低價', '收盤價', '成交筆數']\n",
    "        for col in numeric_columns:\n",
    "            all_data[col] = pd.to_numeric(all_data[col].str.replace(',', ''), errors='coerce')\n",
    "        \n",
    "        # 日期轉換\n",
    "        def convert_date(tw_date):\n",
    "            try:\n",
    "                y, m, d = tw_date.split('/')\n",
    "                y = int(y) + 1911\n",
    "                return f\"{y}-{int(m):02d}-{int(d):02d}\"\n",
    "            except:\n",
    "                return None\n",
    "        \n",
    "        all_data['日期'] = all_data['日期'].apply(convert_date)\n",
    "        all_data = all_data.dropna(subset=['日期'])\n",
    "        all_data.set_index(pd.to_datetime(all_data['日期']), inplace=True)\n",
    "        \n",
    "        # 存入快取\n",
    "        stock_cache.set(stock_id, all_data)\n",
    "        \n",
    "        return all_data\n",
