    "class SignalAnalyzer:\n",
    "    \"\"\"技術信號分析器\"\"\"\n",
    "    \n",
    "    @staticmethod\n",
    "    def analyze_moving_averages(ma_dict, current_price):\n",
    "        \"\"\"分析均線排列狀況\"\"\"\n",
    "        ma_values = {}\n",
    "        for period in [5, 10, 20, 60, 120]:\n",
    "            if f\"MA{period}\" in ma_dict:\n",
    "                ma_values[period] = ma_dict[f\"MA{period}\"].iloc[-1]\n",
    "        \n",
    "        bull_count = 0\n",
    "        arrangements = []\n",
    "        price_above_ma = []\n",
    "        \n",
    "        # 價格相對均線位置\n",
    "        for period in [5, 10, 20, 60, 120]:\n",
    "            if period in ma_values and pd.notna(ma_values[period]):\n",
    "                if current_price > ma_values[period]:\n",
    "                    price_above_ma.append(f\"MA{period}\")\n",
    "        \n",
    "        # 均線相互關係檢查\n",
    "        comparisons = [(5, 10), (10, 20), (20, 60), (60, 120)]\n",
    "        for short, long in comparisons:\n",
    "            if (short in ma_values and long in ma_values and \n",
    "                pd.notna(ma_values[short]) and pd.notna(ma_values[long])):\n",
    "                if ma_values[short] > ma_values[long]:\n",
    "                    bull_count += 1\n",
    "                    arrangements.append(f\"MA{short}>MA{long}\")\n",
    "        \n",
    "        # 判斷排列狀態\n",
    "        if bull_count >= 4 and len(price_above_ma) >= 4:\n",
    "            arrangement_status = \"🟢完美多頭排列\"\n",
    "        elif bull_count >= 3:\n",
    "            arrangement_status = \"🟢偏多排列\"\n",
    "        elif bull_count >= 2:\n",
    "            arrangement_status = \"🟡震盪排列\"\n",
    "        elif bull_count >= 1:\n",
    "            arrangement_status = \"🟠偏空排列\"\n",
    "        else:\n",
    "            arrangement_status = \"🔴空頭排列\"\n",
    "        \n",
    "        # 關鍵支撐壓力位\n",
    "        key_levels = []\n",
    "        for period in [20, 60]:\n",
    "            if period in ma_values and pd.notna(ma_values[period]):\n",
    "                level_price = round(ma_values[period], 2)\n",
    "                if current_price > ma_values[period]:\n",
    "                    key_levels.append(f\"MA{period}支撐{level_price}\")\n",
    "                else:\n",
    "                    key_levels.append(f\"MA{period}壓力{level_price}\")\n",
    "        \n",
    "        return {\n",
    "            'arrangement_status': arrangement_status,\n",
    "            'bull_strength': bull_count,\n",
    "            'arrangements': arrangements,\n",
    "            'price_above_ma': price_above_ma,\n",
    "            'key_levels': key_levels\n",
    "        }\n",
    "    \n",
    "    @staticmethod\n",
    "    def analyze_volume(df):\n",
    "        \"\"\"分析成交量狀況\"\"\"\n",
    "        if len(df) < 10:\n",
    "            return {\n",
    "                'is_high_volume': False,\n",
    "                'is_low_volume': False,\n",
    "                'volume_ratio': 1.0,\n",
    "                'price_trend': 'neutral',\n",
    "                'volume_status': '資料不足'\n",
    "            }\n",
    "        \n",
    "        # 計算量比\n",
    "        avg_volume_10d = df['成交股數'].iloc[-10:-1].mean()\n",
    "        current_volume = df['成交股數'].iloc[-1]\n",
    "        volume_ratio = current_volume / avg_volume_10d if avg_volume_10d > 0 else 1.0\n",
    "        \n",
    "        # 判斷價格走勢\n",
    "        open_price = df['開盤價'].iloc[-1]\n",
    "        close_price = df['收盤價'].iloc[-1]\n",
    "        \n",
    "        if close_price > open_price:\n",
    "            price_trend = 'up'\n",
    "        elif close_price < open_price:\n",
    "            price_trend = 'down'\n",
    "        else:\n",
    "            price_trend = 'neutral'\n",
    "        \n",
    "        # 成交量判斷\n",
    "        is_high_volume = volume_ratio > 1.5\n",
    "        is_low_volume = volume_ratio < 0.7\n",
    "        \n",
    "        if is_high_volume:\n",
    "            volume_status = \"爆量\" if volume_ratio > 2.0 else \"放量\"\n",
    "        elif is_low_volume:\n",
    "            volume_status = \"極度縮量\" if volume_ratio < 0.5 else \"量縮\"\n",
    "        else:\n",
    "            volume_status = \"量能正常\"\n",
    "        \n",
    "        return {\n",
    "            'is_high_volume': is_high_volume,\n",
    "            'is_low_volume': is_low_volume,\n",
    "            'volume_ratio': round(volume_ratio, 2),\n",
    "            'price_trend': price_trend,\n",
    "            'volume_status': volume_status,\n",
    "            'current_volume': int(current_volume / 1000),\n",
    "            'avg_volume_10d': int(avg_volume_10d / 1000)\n",
    "        }\n",
