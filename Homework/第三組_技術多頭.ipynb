    "class DailyScanner:\n",
    "    \"\"\"每日股票掃描器 - 修改版（改為3分通知標準）\"\"\"\n",
    "    \n",
    "    def __init__(self, analyzer):\n",
    "        self.analyzer = analyzer\n",
    "        self.scan_results = []\n",
    "        self.is_scanning = False\n",
    "    \n",
    "    def get_all_stock_codes(self):\n",
    "        \"\"\"獲取所有股票代號\"\"\"\n",
    "        try:\n",
    "            # 獲取上市股票代號 (排除指數、權證等)\n",
    "            stock_codes = []\n",
    "            \n",
    "            # 從 twstock 獲取股票清單\n",
    "            for code in twstock.codes:\n",
    "                # 只取4位數股票代號，排除ETF和其他商品\n",
    "                if (len(code) == 4 and \n",
    "                    code.isdigit() and \n",
    "                    1000 <= int(code) <= 9999 and\n",
    "                    int(code) not in [1000, 1001]):  # 排除特殊代號\n",
    "                    stock_codes.append(code)\n",
    "            \n",
    "            # 添加一些常見的ETF\n",
    "            etf_codes = ['0050', '0056', '0051', '0052']\n",
    "            stock_codes.extend(etf_codes)\n",
    "            \n",
    "            logger.info(f\"共找到 {len(stock_codes)} 檔股票待掃描\")\n",
    "            return stock_codes[:100]  # 限制前100檔避免過載\n",
    "            \n",
    "        except Exception as e:\n",
    "            logger.error(f\"獲取股票清單失敗: {e}\")\n",
    "            # 備用股票清單 (主要成分股)\n",
    "            return [\n",
    "                '2330', '2317', '2454', '2881', '3711', '2382', '2303', '1303',\n",
    "                '1301', '2412', '2002', '1326', '2886', '2891', '2892', '2880',\n",
    "                '3008', '2357', '2308', '6505', '0050', '0056', '2409', '2474',\n",
    "                '2207', '5880', '1216', '2379', '2395', '3034', '1590', '2801'\n",
    "            ]\n",
    "    \n",
    "    def scan_single_stock(self, stock_code):\n",
    "        \"\"\"掃描單檔股票（修改為3分通知標準）\"\"\"\n",
    "        try:\n",
    "            # 使用 analyzer 計算技術指標評分\n",
    "            df = self.analyzer.fetcher.get_full_stock_data(stock_code)\n",
    "            if df.empty:\n",
    "                return None\n",
    "            \n",
    "            df = df.sort_index()\n",
    "            close = df['收盤價']\n",
    "            high = df['最高價']\n",
    "            low = df['最低價']\n",
    "            \n",
    "            # 計算所有技術指標\n",
    "            windows = [5, 10, 20, 60, 120]\n",
    "            ma_dict = {}\n",
    "            for w in windows:\n",
    "                ma_dict[f\"MA{w}\"] = close.rolling(window=w).mean()\n",
    "            \n",
    "            rsi = self.analyzer.tech_analyzer.calculate_rsi(close, 14)\n",
    "            macd_line, signal_line, histogram = self.analyzer.tech_analyzer.calculate_macd(close)\n",
    "            bb_upper, bb_middle, bb_lower = self.analyzer.tech_analyzer.calculate_bollinger_bands(close)\n",
    "            k_values, d_values = self.analyzer.tech_analyzer.calculate_kd(high, low, close)\n",
    "            volume_info = self.analyzer.signal_analyzer.analyze_volume(df)\n",
    "            \n",
    "            latest_close = round(close.iloc[-1], 2)\n",
    "            stock_name = self.analyzer.fetcher.get_stock_name(stock_code)\n",
    "            \n",
    "            # 計算5項技術指標評分（不含成交量）\n",
    "            total_score, indicator_scores = self.analyzer.scorer.calculate_technical_score(\n",
    "                df, ma_dict, rsi, macd_line, signal_line, histogram,\n",
    "                bb_upper, bb_middle, bb_lower, k_values, d_values,\n",
    "                volume_info, latest_close\n",
    "            )\n",
    "            \n",
    "            # 修改條件：只返回評分達到±3分以上的股票\n",
    "            if abs(total_score) >= 3:\n",
    "                return {\n",
    "                    'stock_code': stock_code,\n",
    "                    'stock_name': stock_name,\n",
    "                    'close_price': latest_close,\n",
    "                    'total_score': total_score,\n",
    "                    'indicator_scores': indicator_scores,\n",
    "                    'volume_info': volume_info,  # 保留成交量資訊供參考\n",
    "                    'scan_time': datetime.now().strftime('%Y-%m-%d %H:%M:%S')\n",
    "                }\n",
    "            \n",
    "            return None\n",
    "            \n",
    "        except Exception as e:\n",
    "            logger.warning(f\"掃描股票 {stock_code} 失敗: {e}\")\n",
    "            return None\n",
    "    \n",
    "    def daily_scan(self):\n",
    "        \"\"\"執行每日掃描（修改為3分通知標準）\"\"\"\n",
    "        if self.is_scanning:\n",
    "            logger.info(\"掃描已在進行中，跳過此次掃描\")\n",
    "            return\n",
    "        \n",
    "        self.is_scanning = True\n",
    "        today = datetime.now().strftime('%Y-%m-%d')\n",
    "        logger.info(f\"開始每日股票掃描... {today}\")\n",
    "        \n",
    "        try:\n",
    "            stock_codes = self.get_all_stock_codes()\n",
    "            high_score_stocks = []  # 改名為high_score_stocks以反映新標準\n",
    "            \n",
    "            # 使用多線程提升掃描速度\n",
    "            with ThreadPoolExecutor(max_workers=5) as executor:\n",
    "                # 提交所有掃描任務\n",
    "                future_to_stock = {\n",
    "                    executor.submit(self.scan_single_stock, code): code \n",
    "                    for code in stock_codes\n",
    "                }\n",
    "                \n",
    "                # 收集結果\n",
    "                for future in as_completed(future_to_stock):\n",
    "                    stock_code = future_to_stock[future]\n",
    "                    try:\n",
    "                        result = future.result()\n",
    "                        if result:\n",
    "                            high_score_stocks.append(result)\n",
    "                            logger.info(f\"發現高分股票: {stock_code} {result['stock_name']} ({result['total_score']}/5)\")\n",
    "                    except Exception as e:\n",
    "                        logger.warning(f\"處理股票 {stock_code} 結果失敗: {e}\")\n",
    "                    \n",
    "                    # 避免API過載\n",
    "                    time.sleep(0.05)\n",
    "            \n",
    "            # 儲存當日掃描結果到歷史記錄\n",
    "            if high_score_stocks:\n",
    "                HISTORICAL_PERFECT_SCORES[today] = high_score_stocks.copy()\n",
    "                \n",
    "                # 只保留最近30天的記錄，避免記憶體過度使用\n",
    "                self.cleanup_old_records()\n",
    "            \n",
    "            # 儲存最新掃描結果\n",
    "            self.scan_results = high_score_stocks\n",
    "            \n",
    "            # 發送通知\n",
    "            if high_score_stocks:\n",
    "                self.send_daily_alerts(high_score_stocks)\n",
    "                logger.info(f\"每日掃描完成，發現 {len(high_score_stocks)} 檔高分股票（±3分以上）\")\n",
    "            else:\n",
    "                logger.info(\"每日掃描完成，未發現高分股票（±3分以上）\")\n",
    "                \n",
    "        except Exception as e:\n",
    "            logger.error(f\"每日掃描失敗: {e}\")\n",
    "        finally:\n",
    "            self.is_scanning = False\n",
    "    \n",
    "    def cleanup_old_records(self):\n",
    "        \"\"\"清理過舊的歷史記錄\"\"\"\n",
    "        try:\n",
    "            cutoff_date = (datetime.now() - timedelta(days=30)).strftime('%Y-%m-%d')\n",
    "            keys_to_remove = [date for date in HISTORICAL_PERFECT_SCORES.keys() if date < cutoff_date]\n",
    "            \n",
    "            for key in keys_to_remove:\n",
    "                del HISTORICAL_PERFECT_SCORES[key]\n",
    "                \n",
    "            if keys_to_remove:\n",
    "                logger.info(f\"清理了 {len(keys_to_remove)} 天的舊記錄\")\n",
    "                \n",
    "        except Exception as e:\n",
    "            logger.warning(f\"清理歷史記錄失敗: {e}\")\n",
    "    \n",
    "    def get_trading_days(self, days=5):\n",
    "        \"\"\"獲取過去N個交易日日期\"\"\"\n",
    "        trading_days = []\n",
    "        current_date = datetime.now()\n",
    "        \n",
    "        while len(trading_days) < days:\n",
    "            # 跳過週末 (週六=5, 週日=6)\n",
    "            if current_date.weekday() < 5:  # 週一到週五\n",
    "                trading_days.append(current_date.strftime('%Y-%m-%d'))\n",
    "            current_date -= timedelta(days=1)\n",
    "        \n",
    "        return trading_days\n",
    "    \n",
    "    def get_historical_statistics(self, days=5):\n",
    "        \"\"\"獲取過去N個交易日的高分統計（修改為3分標準）\"\"\"\n",
    "        trading_days = self.get_trading_days(days)\n",
    "        statistics = {\n",
    "            'total_high_score_stocks': 0,\n",
    "            'bull_count': 0,\n",
    "            'bear_count': 0,\n",
    "            'score_distribution': {5: 0, 4: 0, 3: 0, -3: 0, -4: 0, -5: 0},  # 新增分數分布\n",
    "            'daily_breakdown': {},\n",
    "            'stock_frequency': {},  # 統計哪些股票最常出現高分\n",
    "            'trading_days': trading_days\n",
    "        }\n",
    "        \n",
    "        for date in trading_days:\n",
    "            if date in HISTORICAL_PERFECT_SCORES:\n",
    "                daily_records = HISTORICAL_PERFECT_SCORES[date]\n",
    "                \n",
    "                # 統計各分數的股票數量\n",
    "                daily_score_dist = {5: 0, 4: 0, 3: 0, -3: 0, -4: 0, -5: 0}\n",
    "                bull_stocks = []\n",
    "                bear_stocks = []\n",
    "                \n",
    "                for record in daily_records:\n",
    "                    score = record['total_score']\n",
    "                    if score in daily_score_dist:\n",
    "                        daily_score_dist[score] += 1\n",
    "                    \n",
    "                    if score > 0:\n",
    "                        bull_stocks.append(record)\n",
    "                    else:\n",
    "                        bear_stocks.append(record)\n",
    "                \n",
    "                statistics['daily_breakdown'][date] = {\n",
    "                    'records': daily_records,\n",
    "                    'bull_count': len(bull_stocks),\n",
    "                    'bear_count': len(bear_stocks),\n",
    "                    'total_count': len(daily_records),\n",
    "                    'score_distribution': daily_score_dist,\n",
    "                    'bull_stocks': bull_stocks,\n",
    "                    'bear_stocks': bear_stocks\n",
    "                }\n",
    "                \n",
    "                # 總計統計\n",
    "                statistics['total_high_score_stocks'] += len(daily_records)\n",
    "                statistics['bull_count'] += len(bull_stocks)\n",
    "                statistics['bear_count'] += len(bear_stocks)\n",
    "                \n",
    "                # 更新總分數分布\n",
    "                for score, count in daily_score_dist.items():\n",
    "                    statistics['score_distribution'][score] += count\n",
    "                \n",
    "                # 股票出現頻率統計\n",
    "                for record in daily_records:\n",
    "                    stock_key = f\"{record['stock_code']} {record['stock_name']}\"\n",
    "                    if stock_key not in statistics['stock_frequency']:\n",
    "                        statistics['stock_frequency'][stock_key] = {\n",
    "                            'count': 0,\n",
    "                            'dates': [],\n",
    "                            'scores': []\n",
    "                        }\n",
    "                    statistics['stock_frequency'][stock_key]['count'] += 1\n",
    "                    statistics['stock_frequency'][stock_key]['dates'].append(date)\n",
    "                    statistics['stock_frequency'][stock_key]['scores'].append(record['total_score'])\n",
    "            else:\n",
    "                # 沒有記錄的日期\n",
    "                statistics['daily_breakdown'][date] = {\n",
    "                    'records': [],\n",
    "                    'bull_count': 0,\n",
    "                    'bear_count': 0,\n",
    "                    'total_count': 0,\n",
    "                    'score_distribution': {5: 0, 4: 0, 3: 0, -3: 0, -4: 0, -5: 0}\n",
    "                }\n",
    "        \n",
    "        return statistics\n",
    "    \n",
    "    def generate_statistics_report(self, days=5):\n",
    "        \"\"\"生成統計報告（修改為3分標準）\"\"\"\n",
    "        stats = self.get_historical_statistics(days)\n",
    "        \n",
    "        if stats['total_high_score_stocks'] == 0:\n",
    "            return f\"📊 過去{days}個交易日統計\\n\\n❌ 期間內未發現任何高分股票（±3分以上）\"\n",
    "        \n",
    "        # 開始組織報告\n",
    "        report = f\"📊 過去{days}個交易日高分統計 (±3分以上)\\n\"\n",
    "        report += f\"統計期間：{stats['trading_days'][-1]} ~ {stats['trading_days'][0]}\\n\\n\"\n",
    "        \n",
    "        # 總覽統計\n",
    "        report += f\"📈 總計發現：{stats['total_high_score_stocks']} 檔次高分股票\\n\"\n",
    "        report += f\"🔥 多頭高分：{stats['bull_count']} 檔次\\n\"\n",
    "        report += f\"💥 空頭高分：{stats['bear_count']} 檔次\\n\"\n",
    "        report += f\"📊 多空比例：{stats['bull_count']}:{stats['bear_count']}\\n\\n\"\n",
    "        \n",
    "        # 分數分布統計\n",
    "        report += \"📊 分數分布：\\n\"\n",
    "        if stats['score_distribution'][5] > 0:\n",
    "            report += f\"▫️ +5分(滿分)：{stats['score_distribution'][5]} 檔次\\n\"\n",
    "        if stats['score_distribution'][4] > 0:\n",
    "            report += f\"▫️ +4分(強勢)：{stats['score_distribution'][4]} 檔次\\n\"\n",
    "        if stats['score_distribution'][3] > 0:\n",
    "            report += f\"▫️ +3分(偏多)：{stats['score_distribution'][3]} 檔次\\n\"\n",
    "        if stats['score_distribution'][-3] > 0:\n",
    "            report += f\"▫️ -3分(偏空)：{stats['score_distribution'][-3]} 檔次\\n\"\n",
    "        if stats['score_distribution'][-4] > 0:\n",
    "            report += f\"▫️ -4分(弱勢)：{stats['score_distribution'][-4]} 檔次\\n\"\n",
    "        if stats['score_distribution'][-5] > 0:\n",
    "            report += f\"▫️ -5分(滿分)：{stats['score_distribution'][-5]} 檔次\\n\"\n",
    "        report += \"\\n\"\n",
    "        \n",
    "        # 每日明細\n",
    "        report += \"📅 每日明細：\\n\"\n",
    "        for date in stats['trading_days']:\n",
    "            day_data = stats['daily_breakdown'][date]\n",
    "            if day_data['total_count'] > 0:\n",
    "                # 格式化日期 (顯示星期)\n",
    "                date_obj = datetime.strptime(date, '%Y-%m-%d')\n",
    "                weekday = ['週一', '週二', '週三', '週四', '週五'][date_obj.weekday()]\n",
    "                \n",
    "                report += f\"▫️ {date} ({weekday}) - {day_data['total_count']}檔\\n\"\n",
    "                \n",
    "                # 顯示該日的股票（按分數分組）\n",
    "                scores_groups = {}\n",
    "                for record in day_data['records']:\n",
    "                    score = record['total_score']\n",
    "                    if score not in scores_groups:\n",
    "                        scores_groups[score] = []\n",
    "                    scores_groups[score].append(record)\n",
    "                \n",
    "                # 按分數由高到低排序顯示\n",
    "                for score in sorted(scores_groups.keys(), reverse=True):\n",
    "                    score_emoji = \"🔥\" if score > 0 else \"💥\"\n",
    "                    trend_text = f\"{score:+d}\"\n",
    "                    for record in scores_groups[score]:\n",
    "                        report += f\"   {record['stock_code']} {record['stock_name']} {score_emoji}{trend_text}\\n\"\n",
    "                report += \"\\n\"\n",
    "            else:\n",
    "                # 沒有高分股票的日期\n",
    "                date_obj = datetime.strptime(date, '%Y-%m-%d')\n",
    "                weekday = ['週一', '週二', '週三', '週四', '週五'][date_obj.weekday()]\n",
    "                report += f\"▫️ {date} ({weekday}) - 無高分股票\\n\"\n",
    "        \n",
    "        # 高頻股票統計 (出現2次以上)\n",
    "        frequent_stocks = {k: v for k, v in stats['stock_frequency'].items() if v['count'] >= 2}\n",
    "        if frequent_stocks:\n",
    "            report += \"\\n🏆 高頻高分股票：\\n\"\n",
    "            # 按出現次數排序\n",
    "            sorted_stocks = sorted(frequent_stocks.items(), key=lambda x: x[1]['count'], reverse=True)\n",
    "            \n",
    "            for stock_key, data in sorted_stocks[:5]:  # 最多顯示5檔\n",
    "                dates_str = ', '.join(data['dates'])\n",
    "                scores_str = ', '.join([f\"{s:+d}\" for s in data['scores']])\n",
    "                report += f\"▫️ {stock_key}\\n\"\n",
    "                report += f\"   出現{data['count']}次: {scores_str}\\n\"\n",
    "                report += f\"   日期: {dates_str}\\n\\n\"\n",
    "        \n",
    "        # 市場趨勢分析\n",
    "        report += \"📈 市場趨勢：\\n\"\n",
    "        if stats['bull_count'] > stats['bear_count'] * 2:\n",
    "            report += \"🟢 技術面偏強，多頭訊號占優勢\\n\"\n",
    "        elif stats['bear_count'] > stats['bull_count'] * 2:\n",
    "            report += \"🔴 技術面偏弱，空頭訊號占優勢\\n\"\n",
    "        else:\n",
    "            report += \"🟡 多空交替，市場呈現震盪格局\\n\"\n",
    "        \n",
    "        # 如果報告太長，分割回覆\n",
    "        if len(report) > 2000:\n",
    "            report = report[:1980] + \"\\n\\n... (報告過長已截斷)\"\n",
    "        \n",
    "        return report\n",
    "    \n",
    "    def send_daily_alerts(self, high_score_stocks):\n",
    "        \"\"\"發送每日警報給所有訂閱用戶（修改為3分標準）\"\"\"\n",
    "        today = datetime.now().strftime('%Y-%m-%d')\n",
    "        \n",
    "        # 組織警報訊息\n",
    "        if len(high_score_stocks) == 1:\n",
    "            alert_msg = f\"🚨 每日高分警報 🚨\\n{today}\\n\\n\"\n",
    "        else:\n",
    "            alert_msg = f\"🚨 每日高分警報 🚨\\n{today}\\n發現 {len(high_score_stocks)} 檔高分股票\\n\\n\"\n",
    "        \n",
    "        # 按分數分組顯示\n",
    "        scores_groups = {}\n",
    "        for stock in high_score_stocks:\n",
    "            score = stock['total_score']\n",
    "            if score not in scores_groups:\n",
    "                scores_groups[score] = []\n",
    "            scores_groups[score].append(stock)\n",
    "        \n",
    "        # 按分數由高到低排序顯示\n",
    "        stock_index = 1\n",
    "        for score in sorted(scores_groups.keys(), reverse=True):\n",
    "            score_emoji = \"🔥\" if score > 0 else \"💥\"\n",
    "            \n",
    "            if score == 5:\n",
    "                trend_text = \"極強多頭(滿分)\"\n",
    "            elif score == 4:\n",
    "                trend_text = \"強勢多頭\"\n",
    "            elif score == 3:\n",
    "                trend_text = \"偏多格局\"\n",
    "            elif score == -3:\n",
    "                trend_text = \"偏空格局\"\n",
    "            elif score == -4:\n",
    "                trend_text = \"強勢空頭\"\n",
    "            elif score == -5:\n",
    "                trend_text = \"極強空頭(滿分)\"\n",
    "            else:\n",
    "                trend_text = f\"{score:+d}分\"\n",
    "            \n",
    "            for stock in scores_groups[score]:\n",
    "                alert_msg += f\"{stock_index}. {stock['stock_code']} {stock['stock_name']}\\n\"\n",
    "                alert_msg += f\"   💰 {stock['close_price']} | {score_emoji} {trend_text}\\n\"\n",
    "                \n",
    "                # 顯示成交量資訊作為參考\n",
    "                if 'volume_info' in stock:\n",
    "                    volume_status = stock['volume_info']['volume_status']\n",
    "                    alert_msg += f\"   📊 {volume_status}\\n\"\n",
    "                alert_msg += \"\\n\"\n",
    "                stock_index += 1\n",
    "        \n",
    "        alert_msg += \"📝 輸入股票代號查看詳細分析\\n\"\n",
    "        alert_msg += \"輸入'取消通知'停止每日推播\"\n",
    "        \n",
    "        # 發送給所有訂閱用戶\n",
    "        for user_id, user_data in USER_SUBSCRIPTIONS.items():\n",
    "            if user_data.get('subscribed', False):\n",
    "                self.send_push_message(user_id, alert_msg)\n",
    "                # 更新最後通知時間\n",
    "                USER_SUBSCRIPTIONS[user_id]['last_alert'] = today\n",
    "    \n",
    "    def send_push_message(self, user_id, message):\n",
    "        \"\"\"發送推播訊息\"\"\"\n",
    "        try:\n",
    "            payload = {\n",
    "                \"to\": user_id,\n",
    "                \"messages\": [{\"type\": \"text\", \"text\": message}]\n",
    "            }\n",
    "            \n",
    "            response = requests.post(LINE_PUSH_API, headers=HEADERS, json=payload, timeout=10)\n",
    "            \n",
    "            if response.status_code == 200:\n",
    "                logger.info(f\"推播訊息成功發送給用戶: {user_id}\")\n",
    "            else:\n",
    "                logger.error(f\"推播失敗: {response.status_code}, {response.text}\")\n",
    "                \n",
    "        except Exception as e:\n",
    "            logger.error(f\"發送推播訊息失敗: {e}\")\n",
    "\n",
    "class SubscriptionManager:\n",
    "    \"\"\"訂閱管理器\"\"\"\n",
    "    \n",
    "    @staticmethod\n",
    "    def subscribe_user(user_id):\n",
    "        \"\"\"訂閱用戶\"\"\"\n",
    "        USER_SUBSCRIPTIONS[user_id] = {\n",
    "            'subscribed': True,\n",
    "            'subscribe_date': datetime.now().strftime('%Y-%m-%d'),\n",
    "            'last_alert': None\n",
    "        }\n",
    "        return \"✅ 已開啟每日高分警報推播\\n每天收盤後會自動推送技術面高分（±3分以上）的股票通知\"\n",
    "    \n",
    "    @staticmethod\n",
    "    def unsubscribe_user(user_id):\n",
    "        \"\"\"取消訂閱\"\"\"\n",
    "        if user_id in USER_SUBSCRIPTIONS:\n",
    "            USER_SUBSCRIPTIONS[user_id]['subscribed'] = False\n",
    "        return \"❌ 已取消每日高分警報推播\"\n",
    "    \n",
    "    @staticmethod\n",
    "    def get_subscription_status(user_id):\n",
    "        \"\"\"獲取訂閱狀態\"\"\"\n",
    "        if user_id in USER_SUBSCRIPTIONS and USER_SUBSCRIPTIONS[user_id].get('subscribed', False):\n",
    "            last_alert = USER_SUBSCRIPTIONS[user_id].get('last_alert', '無')\n",
    "            return f\"✅ 已訂閱每日高分警報\\n最後推播: {last_alert}\"\n",
    "        else:\n",
    "            return \"❌ 尚未訂閱每日高分警報\\n輸入'訂閱通知'開啟推播\"\n",
    "\n",
    "class StockAnalyzer:\n",
    "    \"\"\"主要股票分析器 - 修改版（5分制）\"\"\"\n",
    "    \n",
    "    def __init__(self):\n",
    "        self.fetcher = StockDataFetcher()\n",
    "        self.tech_analyzer = TechnicalAnalyzer()\n",
    "        self.signal_analyzer = SignalAnalyzer()\n",
    "        self.scorer = TechnicalScorer()  # 使用修改後的評分器\n",
    "    \n",
    "    def get_simple_analysis(self, stock_id):\n",
    "        \"\"\"簡化版技術分析（保持不變，因為不涉及總評分）\"\"\"\n",
    "        try:\n",
    "            df = self.fetcher.get_full_stock_data(stock_id)\n",
    "            if df.empty:\n",
    "                return None, \"查無近期成交資料\"\n",
    "            \n",
    "            df = df.sort_index()\n",
    "            close = df['收盤價']\n",
    "            \n",
    "            stock_name = self.fetcher.get_stock_name(stock_id)\n",
    "            latest_close = round(close.iloc[-1], 2)\n",
    "            latest_date = close.index[-1].strftime('%Y/%m/%d')\n",
    "            \n",
    "            # 計算關鍵指標\n",
    "            ma20 = close.rolling(window=20).mean().iloc[-1]\n",
    "            rsi = self.tech_analyzer.calculate_rsi(close, 14).iloc[-1]\n",
    "            \n",
    "            # 組織回覆訊息\n",
    "            reply_message = f\"📈 {stock_id} {stock_name}\\n\"\n",
    "            reply_message += f\"💰 {latest_date}收盤價：{latest_close}\\n\"\n",
    "            reply_message += f\"📊 MA20：{round(ma20, 2) if pd.notna(ma20) else 'N/A'}\\n\"\n",
    "            \n",
    "            if pd.notna(rsi):\n",
    "                rsi_val = round(rsi, 2)\n",
    "                if rsi > 70:\n",
    "                    rsi_emoji = \"📈超買\"\n",
    "                elif rsi < 30:\n",
    "                    rsi_emoji = \"📉超賣\"\n",
    "                else:\n",
    "                    rsi_emoji = \"🟡中性\"\n",
    "                reply_message += f\"🎯 RSI：{rsi_val} {rsi_emoji}\\n\"\n",
    "            \n",
    "            # 量價關係\n",
    "            volume_info = self.signal_analyzer.analyze_volume(df)\n",
    "            if volume_info['is_high_volume'] and volume_info['price_trend'] == 'up':\n",
    "                reply_message += \"🟢 放量上漲\"\n",
    "            elif volume_info['is_high_volume'] and volume_info['price_trend'] == 'down':\n",
    "                reply_message += \"🔴 放量下跌\"\n",
    "            else:\n",
    "                reply_message += f\"📊 {volume_info['volume_status']}\"\n",
    "            \n",
    "            return reply_message, None\n",
    "            \n",
    "        except Exception as e:\n",
    "            logger.error(f\"簡化分析失敗 {stock_id}: {e}\")\n",
    "            return None, \"系統忙碌中，請稍後再試\"\n",
    "    \n",
    "    def get_detailed_analysis(self, stock_id):\n",
    "        \"\"\"詳細技術分析（修改為5分制）\"\"\"\n",
    "        try:\n",
    "            df = self.fetcher.get_full_stock_data(stock_id)\n",
    "            if df.empty:\n",
    "                return None, \"查無近期成交資料\"\n",
    "            \n",
    "            df = df.sort_index()\n",
    "            close = df['收盤價']\n",
    "            high = df['最高價']\n",
    "            low = df['最低價']\n",
    "            \n",
    "            stock_name = self.fetcher.get_stock_name(stock_id)\n",
    "            latest_close = round(close.iloc[-1], 2)\n",
    "            latest_date = close.index[-1].strftime('%Y/%m/%d')\n",
    "            \n",
    "            # 計算所有技術指標\n",
    "            windows = [5, 10, 20, 60, 120]\n",
    "            ma_dict = {}\n",
    "            for w in windows:\n",
    "                ma_dict[f\"MA{w}\"] = close.rolling(window=w).mean()\n",
    "            \n",
    "            rsi = self.tech_analyzer.calculate_rsi(close, 14)\n",
    "            macd_line, signal_line, histogram = self.tech_analyzer.calculate_macd(close)\n",
    "            bb_upper, bb_middle, bb_lower = self.tech_analyzer.calculate_bollinger_bands(close)\n",
    "            k_values, d_values = self.tech_analyzer.calculate_kd(high, low, close)\n",
    "            volume_info = self.signal_analyzer.analyze_volume(df)\n",
    "            \n",
    "            # 計算5項技術指標評分\n",
    "            total_score, indicator_scores = self.scorer.calculate_technical_score(\n",
    "                df, ma_dict, rsi, macd_line, signal_line, histogram,\n",
    "                bb_upper, bb_middle, bb_lower, k_values, d_values,\n",
    "                volume_info, latest_close\n",
    "            )\n",
    "            \n",
    "            # 組織詳細回覆訊息\n",
    "            reply_message = f\"📈 {stock_id} {stock_name}\\n\"\n",
    "            reply_message += f\"💰 {latest_date}收盤價：{latest_close}\\n\\n\"\n",
    "            \n",
    "            # 技術指標評分摘要 (5分制)\n",
    "            reply_message += f\"⭐ 技術指標評分：{total_score}/5\\n\"\n",
    "            if total_score == 5:\n",
    "                reply_message += \"🔥 極強多頭 - 滿分技術面\\n\"\n",
    "            elif total_score == 4:\n",
    "                reply_message += \"🔥 強勢多頭\\n\"\n",
    "            elif total_score == 3:\n",
    "                reply_message += \"🟢 偏多格局\\n\"\n",
    "            elif total_score == -5:\n",
    "                reply_message += \"💥 極強空頭 - 滿分技術面\\n\"\n",
    "            elif total_score == -4:\n",
    "                reply_message += \"💥 強勢空頭\\n\"\n",
    "            elif total_score == -3:\n",
    "                reply_message += \"🔴 偏空格局\\n\"\n",
    "            elif total_score >= 1:\n",
    "                reply_message += \"🟢 技術面偏多\\n\"\n",
    "            elif total_score <= -1:\n",
    "                reply_message += \"🔴 技術面偏空\\n\"\n",
    "            else:\n",
    "                reply_message += \"🟡 技術面中性\\n\"\n",
    "            \n",
    "            reply_message += \"\\n📊 各項指標評分：\\n\"\n",
    "            for indicator, score in indicator_scores.items():\n",
    "                score_text = \"✅+1\" if score > 0 else \"❌-1\" if score < 0 else \"⚪0\"\n",
    "                reply_message += f\"• {indicator}：{score_text}\\n\"\n",
    "            \n",
    "            reply_message += \"\\n\" + \"=\"*20 + \"\\n\"\n",
    "            \n",
    "            # 移動平均線\n",
    "            reply_message += \"📊 移動平均線\\n\"\n",
    "            for w in windows:\n",
    "                val = ma_dict[f\"MA{w}\"].iloc[-1]\n",
    "                if pd.notna(val):\n",
    "                    reply_message += f\"MA{w}: {round(val, 2)}\\n\"\n",
    "            \n",
    "            # 均線排列分析\n",
    "            ma_analysis = self.signal_analyzer.analyze_moving_averages(ma_dict, latest_close)\n",
    "            reply_message += f\"\\n🎢 均線排列: {ma_analysis['arrangement_status']}\\n\"\n",
    "            reply_message += f\"多頭強度: {ma_analysis['bull_strength']}/4\\n\"\n",
    "            \n",
    "            # RSI分析\n",
    "            if pd.notna(rsi.iloc[-1]):\n",
    "                rsi_val = round(rsi.iloc[-1], 2)\n",
    "                if rsi_val > 70:\n",
    "                    rsi_status = \"📈超買區間\"\n",
    "                elif rsi_val < 30:\n",
    "                    rsi_status = \"📉超賣區間\"\n",
    "                else:\n",
    "                    rsi_status = \"🟡中性區間\"\n",
    "                reply_message += f\"\\n🎯 RSI(14): {rsi_val} {rsi_status}\\n\"\n",
    "            \n",
    "            # MACD分析\n",
    "            if pd.notna(macd_line.iloc[-1]) and pd.notna(signal_line.iloc[-1]):\n",
    "                macd_val = round(macd_line.iloc[-1], 2)\n",
    "                signal_val = round(signal_line.iloc[-1], 2)\n",
    "                hist_val = round(histogram.iloc[-1], 2)\n",
    "                \n",
    "                macd_trend = \"📈多頭\" if macd_val > signal_val else \"📉空頭\"\n",
    "                reply_message += f\"\\n⚡ MACD\\n\"\n",
    "                reply_message += f\"MACD: {macd_val}\\n\"\n",
    "                reply_message += f\"Signal: {signal_val}\\n\"\n",
    "                reply_message += f\"Histogram: {hist_val} {macd_trend}\\n\"\n",
    "            \n",
    "            # 布林通道\n",
    "            if pd.notna(bb_upper.iloc[-1]) and pd.notna(bb_lower.iloc[-1]):\n",
    "                bb_up = round(bb_upper.iloc[-1], 2)\n",
    "                bb_mid = round(bb_middle.iloc[-1], 2)\n",
    "                bb_low = round(bb_lower.iloc[-1], 2)\n",
    "                \n",
    "                # 判斷位置\n",
    "                if latest_close > bb_up:\n",
    "                    bb_pos = \"📈上軌外\"\n",
    "                elif latest_close < bb_low:\n",
    "                    bb_pos = \"📉下軌外\"\n",
    "                else:\n",
    "                    bb_pos = \"🟡軌道內\"\n",
    "                    \n",
    "                reply_message += f\"\\n🎪 布林通道(20,2)\\n\"\n",
    "                reply_message += f\"上軌: {bb_up}\\n\"\n",
    "                reply_message += f\"中軌: {bb_mid}\\n\"\n",
    "                reply_message += f\"下軌: {bb_low}\\n\"\n",
    "                reply_message += f\"位置: {bb_pos}\\n\"\n",
    "            \n",
    "            # KD指標分析（含鈍化判斷）\n",
    "            if pd.notna(k_values.iloc[-1]) and pd.notna(d_values.iloc[-1]):\n",
    "                k_val = round(k_values.iloc[-1], 2)\n",
    "                d_val = round(d_values.iloc[-1], 2)\n",
    "                \n",
    "                # 進行KD鈍化分析\n",
    "                kd_analysis = self.tech_analyzer.analyze_kd_signals(k_values, d_values, close)\n",
    "                \n",
    "                reply_message += f\"\\n🎲 KD指標(9,3)\\n\"\n",
    "                reply_message += f\"K值: {k_val}\\n\"\n",
    "                reply_message += f\"D值: {d_val}\\n\"\n",
    "                reply_message += f\"狀態: {kd_analysis['status']}\\n\"\n",
    "                \n",
    "                # 如果有特殊鈍化狀況才顯示詳細分析\n",
    "                if kd_analysis['signal'] in ['strong_bull', 'strong_bear', 'weak_bull', 'weak_bear']:\n",
    "                    reply_message += f\"分析: {kd_analysis['description']}\\n\"\n",
    "            \n",
    "            # 成交量分析（參考用，不計分）\n",
    "            reply_message += f\"\\n📊 成交量分析 (參考)\\n\"\n",
    "            reply_message += f\"今日成交: {volume_info['current_volume']}千股\\n\"\n",
    "            reply_message += f\"10日均量: {volume_info['avg_volume_10d']}千股\\n\"\n",
    "            reply_message += f\"量比: {volume_info['volume_ratio']} ({volume_info['volume_status']})\\n\"\n",
    "            \n",
    "            # 量價關係\n",
    "            volume_emoji = \"\"\n",
    "            if volume_info['is_high_volume']:\n",
    "                if volume_info['price_trend'] == 'up':\n",
    "                    volume_emoji = \"🟢放量上漲 (強勢)\"\n",
    "                elif volume_info['price_trend'] == 'down':\n",
    "                    volume_emoji = \"🔴放量下跌 (弱勢)\"\n",
