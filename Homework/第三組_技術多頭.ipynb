    "plt.rcParams['axes.unicode_minus'] = False\n",
    "\n",
    "class StockDataCache:\n",
    "    \"\"\"股票資料快取機制\"\"\"\n",
    "    def __init__(self, cache_duration_minutes=10):\n",
    "        self.cache = {}\n",
    "        self.cache_duration = timedelta(minutes=cache_duration_minutes)\n",
    "    \n",
    "    def get(self, stock_id):\n",
    "        if stock_id in self.cache:\n",
    "            data, timestamp = self.cache[stock_id]\n",
    "            if datetime.now() - timestamp < self.cache_duration:\n",
    "                return data\n",
    "        return None\n",
    "    \n",
    "    def set(self, stock_id, data):\n",
    "        self.cache[stock_id] = (data, datetime.now())\n",
    "\n",
    "# 全域快取實例\n",
    "stock_cache = StockDataCache()\n",
    "\n",
    "class TechnicalAnalyzer:\n",
    "    \"\"\"技術分析器類別\"\"\"\n",
    "    \n",
    "    @staticmethod\n",
    "    def calculate_rsi(prices, period=14):\n",
    "        \"\"\"計算RSI相對強弱指標\"\"\"\n",
    "        delta = prices.diff()\n",
    "        gain = delta.where(delta > 0, 0)\n",
    "        loss = -delta.where(delta < 0, 0)\n",
    "        \n",
    "        avg_gain = gain.rolling(window=period).mean()\n",
    "        avg_loss = loss.rolling(window=period).mean()\n",
    "        \n",
    "        rs = avg_gain / avg_loss\n",
    "        rsi = 100 - (100 / (1 + rs))\n",
    "        return rsi\n",
    "\n",
    "    @staticmethod\n",
    "    def calculate_macd(prices, fast=12, slow=26, signal=9):\n",
    "        \"\"\"計算MACD指標\"\"\"\n",
    "        ema_fast = prices.ewm(span=fast).mean()\n",
    "        ema_slow = prices.ewm(span=slow).mean()\n",
    "        \n",
    "        macd_line = ema_fast - ema_slow\n",
    "        signal_line = macd_line.ewm(span=signal).mean()\n",
    "        histogram = macd_line - signal_line\n",
    "        \n",
    "        return macd_line, signal_line, histogram\n",
    "\n",
    "    @staticmethod\n",
    "    def calculate_bollinger_bands(prices, period=20, std_dev=2):\n",
    "        \"\"\"計算布林通道\"\"\"\n",
    "        sma = prices.rolling(window=period).mean()\n",
    "        std = prices.rolling(window=period).std()\n",
    "        \n",
    "        upper_band = sma + (std * std_dev)\n",
    "        lower_band = sma - (std * std_dev)\n",
    "        \n",
    "        return upper_band, sma, lower_band\n",
    "\n",
    "    @staticmethod\n",
    "    def calculate_kd(high, low, close, k_period=9, d_period=3):\n",
    "        \"\"\"計算KD指標\"\"\"\n",
    "        lowest_low = low.rolling(window=k_period).min()\n",
    "        highest_high = high.rolling(window=k_period).max()\n",
    "        \n",
    "        rsv = ((close - lowest_low) / (highest_high - lowest_low)) * 100\n",
    "        \n",
    "        k_values = rsv.rolling(window=d_period).mean()\n",
    "        d_values = k_values.rolling(window=d_period).mean()\n",
    "        \n",
    "        return k_values, d_values\n",
    "    \n",
    "    @staticmethod\n",
    "    def analyze_kd_signals(k_values, d_values, close_prices, min_days=3):\n",
    "        \"\"\"分析KD指標的高檔/低檔鈍化現象\"\"\"\n",
    "        if len(k_values) < 10 or len(d_values) < 10:\n",
    "            return {\n",
    "                'status': '資料不足',\n",
    "                'signal': 'neutral',\n",
    "                'description': '',\n",
    "                'strength': 0\n",
    "            }\n",
    "        \n",
    "        current_k = k_values.iloc[-1]\n",
    "        current_d = d_values.iloc[-1]\n",
    "        \n",
    "        # 取最近5天的KD值來判斷鈍化\n",
    "        recent_k = k_values.iloc[-5:]\n",
    "        recent_d = d_values.iloc[-5:]\n",
    "        recent_prices = close_prices.iloc[-5:]\n",
    "        \n",
    "        # 高檔鈍化判斷 (KD > 80)\n",
    "        if current_k > 80 and current_d > 80:\n",
    "            # 計算高檔鈍化天數\n",
    "            high_level_days = sum(1 for k, d in zip(recent_k, recent_d) if k > 80 and d > 80)\n",
    "            \n",
    "            # 檢查是否出現死亡交叉\n",
    "            has_death_cross = False\n",
    "            cross_signal = \"\"\n",
    "            \n",
    "            # 檢查最近3天是否有交叉\n",
    "            for i in range(1, min(4, len(recent_k))):\n",
    "                prev_k, prev_d = recent_k.iloc[-i-1], recent_d.iloc[-i-1]\n",
    "                curr_k, curr_d = recent_k.iloc[-i], recent_d.iloc[-i]\n",
    "                \n",
    "                # 死亡交叉：K從上方跌破D\n",
    "                if prev_k > prev_d and curr_k < curr_d:\n",
    "                    has_death_cross = True\n",
    "                    cross_signal = \"出現死亡交叉\"\n",
    "                    break\n",
    "            \n",
    "            if high_level_days >= min_days:\n",
    "                # 高檔鈍化狀態\n",
    "                if not has_death_cross:\n",
    "                    # 檢查價格趨勢是否仍向上\n",
    "                    price_trend_up = recent_prices.iloc[-1] > recent_prices.iloc[-3]\n",
    "                    if price_trend_up:\n",
    "                        return {\n",
    "                            'status': '高檔鈍化',\n",
    "                            'signal': 'strong_bull',\n",
    "                            'description': f'KD高檔鈍化{high_level_days}天，未破位，可能強勢續漲',\n",
    "                            'strength': high_level_days,\n",
    "                            'cross_info': '維持多頭排列'\n",
    "                        }\n",
    "                    else:\n",
    "                        return {\n",
    "                            'status': '高檔鈍化',\n",
    "                            'signal': 'weak_bull',\n",
    "                            'description': f'KD高檔鈍化{high_level_days}天，但價格走弱',\n",
    "                            'strength': high_level_days,\n",
    "                            'cross_info': '注意反轉風險'\n",
    "                        }\n",
    "                else:\n",
    "                    return {\n",
    "                        'status': '高檔反轉',\n",
    "                        'signal': 'bear',\n",
    "                        'description': f'KD高檔鈍化後{cross_signal}，反轉機率高',\n",
    "                        'strength': high_level_days,\n",
    "                        'cross_info': cross_signal\n",
    "                    }\n",
    "            else:\n",
    "                return {\n",
    "                    'status': '剛進超買',\n",
    "                    'signal': 'caution',\n",
    "                    'description': 'KD剛進入超買區，觀察是否鈍化',\n",
    "                    'strength': high_level_days,\n",
    "                    'cross_info': '密切觀察'\n",
    "                }\n",
    "        \n",
    "        # 低檔鈍化判斷 (KD < 20)\n",
    "        elif current_k < 20 and current_d < 20:\n",
    "            # 計算低檔鈍化天數\n",
    "            low_level_days = sum(1 for k, d in zip(recent_k, recent_d) if k < 20 and d < 20)\n",
    "            \n",
    "            # 檢查是否出現黃金交叉\n",
    "            has_golden_cross = False\n",
    "            cross_signal = \"\"\n",
    "            \n",
    "            # 檢查最近3天是否有交叉\n",
    "            for i in range(1, min(4, len(recent_k))):\n",
    "                prev_k, prev_d = recent_k.iloc[-i-1], recent_d.iloc[-i-1]\n",
    "                curr_k, curr_d = recent_k.iloc[-i], recent_d.iloc[-i]\n",
    "                \n",
    "                # 黃金交叉：K從下方突破D\n",
    "                if prev_k < prev_d and curr_k > curr_d:\n",
    "                    has_golden_cross = True\n",
    "                    cross_signal = \"出現黃金交叉\"\n",
    "                    break\n",
    "            \n",
    "            if low_level_days >= min_days:\n",
    "                # 低檔鈍化狀態\n",
    "                if not has_golden_cross:\n",
    "                    # 檢查價格趨勢是否仍向下\n",
    "                    price_trend_down = recent_prices.iloc[-1] < recent_prices.iloc[-3]\n",
    "                    if price_trend_down:\n",
    "                        return {\n",
    "                            'status': '低檔鈍化',\n",
    "                            'signal': 'strong_bear',\n",
    "                            'description': f'KD低檔鈍化{low_level_days}天，未反彈，可能持續下跌',\n",
    "                            'strength': low_level_days,\n",
    "                            'cross_info': '維持空頭排列'\n",
    "                        }\n",
    "                    else:\n",
    "                        return {\n",
    "                            'status': '低檔鈍化',\n",
    "                            'signal': 'weak_bear',\n",
    "                            'description': f'KD低檔鈍化{low_level_days}天，但價格止跌',\n",
    "                            'strength': low_level_days,\n",
    "                            'cross_info': '可能築底'\n",
    "                        }\n",
    "                else:\n",
    "                    return {\n",
    "                        'status': '低檔反轉',\n",
    "                        'signal': 'bull',\n",
    "                        'description': f'KD低檔鈍化後{cross_signal}，反彈機率高',\n",
    "                        'strength': low_level_days,\n",
    "                        'cross_info': cross_signal\n",
    "                    }\n",
    "            else:\n",
    "                return {\n",
    "                    'status': '剛進超賣',\n",
    "                    'signal': 'opportunity',\n",
    "                    'description': 'KD剛進入超賣區，觀察是否鈍化',\n",
    "                    'strength': low_level_days,\n",
    "                    'cross_info': '可能反彈機會'\n",
    "                }\n",
    "        \n",
    "        # 中性區間 (20 <= KD <= 80)\n",
    "        else:\n",
    "            # 檢查交叉訊號\n",
    "            if len(k_values) >= 2 and len(d_values) >= 2:\n",
    "                prev_k, prev_d = k_values.iloc[-2], d_values.iloc[-2]\n",
    "                \n",
    "                if current_k > current_d and prev_k <= prev_d:\n",
    "                    return {\n",
    "                        'status': '黃金交叉',\n",
    "                        'signal': 'bull',\n",
    "                        'description': 'KD黃金交叉，短線偏多',\n",
    "                        'strength': 1,\n",
    "                        'cross_info': '買進訊號'\n",
    "                    }\n",
    "                elif current_k < current_d and prev_k >= prev_d:\n",
    "                    return {\n",
    "                        'status': '死亡交叉',\n",
    "                        'signal': 'bear',\n",
    "                        'description': 'KD死亡交叉，短線偏空',\n",
    "                        'strength': 1,\n",
    "                        'cross_info': '賣出訊號'\n",
    "                    }\n",
    "                else:\n",
    "                    return {\n",
    "                        'status': '中性區間',\n",
    "                        'signal': 'neutral',\n",
    "                        'description': 'KD在中性區間，方向不明',\n",
    "                        'strength': 0,\n",
    "                        'cross_info': '等待明確訊號'\n",
    "                    }\n",
    "            \n",
    "            return {\n",
    "                'status': '中性區間',\n",
    "                'signal': 'neutral',\n",
    "                'description': 'KD在中性區間',\n",
    "                'strength': 0,\n",
    "                'cross_info': '觀望'\n",
    "            }\n",
    "\n",
    "class StockDataFetcher:\n",
    "    \"\"\"股票資料獲取器\"\"\"\n",
    "    \n",
    "    @staticmethod\n",
    "    @lru_cache(maxsize=100)\n",
    "    def get_stock_name(stock_id):\n",
    "        \"\"\"獲取股票名稱（帶快取）\"\"\"\n",
    "        try:\n",
    "            if stock_id in twstock.codes:\n",
    "                return twstock.codes[stock_id].name\n",
