    "\n",
    "def schedule_daily_scan():\n",
    "    \"\"\"排程每日掃描\"\"\"\n",
    "    # 每天下午2點執行掃描 (台股收盤後)\n",
    "    schedule.every().day.at(\"14:05\").do(daily_scanner.daily_scan)\n",
    "    \n",
    "    while True:\n",
    "        schedule.run_pending()\n",
    "        time.sleep(60)  # 每分鐘檢查一次\n",
    "\n",
    "# 在背景執行排程\n",
    "def start_scheduler():\n",
    "    scheduler_thread = threading.Thread(target=schedule_daily_scan, daemon=True)\n",
    "    scheduler_thread.start()\n",
    "    logger.info(\"每日掃描排程已啟動 (14:05)\")\n",
    "\n",
    "@app.route(\"/\", methods=[\"POST\"])\n",
    "def linebot():\n",
    "    \"\"\"LINE Bot 主要處理函數\"\"\"\n",
    "    try:\n",
    "        data = request.get_json()\n",
    "        if not data or \"events\" not in data or not data[\"events\"]:\n",
    "            return \"OK\", 200\n",
    "        \n",
    "        event = data[\"events\"][0]\n",
    "        \n",
    "        # 檢查事件類型\n",
    "        if event.get(\"type\") != \"message\" or event.get(\"message\", {}).get(\"type\") != \"text\":\n",
    "            return \"OK\", 200\n",
    "        \n",
    "        message = event[\"message\"][\"text\"].strip()\n",
    "        reply_token = event[\"replyToken\"]\n",
    "        user_id = event.get(\"source\", {}).get(\"userId\")  # 獲取用戶ID\n",
    "        \n",
    "        # 處理訂閱相關指令\n",
    "        if message in [\"訂閱通知\", \"開啟通知\", \"訂閱警報\"]:\n",
    "            if user_id:\n",
    "                reply_text = subscription_manager.subscribe_user(user_id)\n",
    "            else:\n",
    "                reply_text = \"無法識別用戶，請稍後再試\"\n",
    "                \n",
    "        elif message in [\"取消通知\", \"關閉通知\", \"取消訂閱\"]:\n",
    "            if user_id:\n",
    "                reply_text = subscription_manager.unsubscribe_user(user_id)\n",
    "            else:\n",
    "                reply_text = \"無法識別用戶，請稍後再試\"\n",
    "                \n",
    "        elif message in [\"通知狀態\", \"訂閱狀態\", \"我的訂閱\"]:\n",
    "            if user_id:\n",
    "                reply_text = subscription_manager.get_subscription_status(user_id)\n",
    "            else:\n",
    "                reply_text = \"無法識別用戶，請稍後再試\"\n",
    "                \n",
    "        elif message == \"今日掃描\" and user_id:\n",
    "            # 手動觸發掃描 (僅供測試) - 修改為3分標準\n",
    "            if daily_scanner.scan_results:\n",
    "                last_scan = daily_scanner.scan_results\n",
    "                if last_scan:\n",
    "                    reply_text = f\"📊 最近掃描結果 ({len(last_scan)}檔高分)\\n\\n\"\n",
    "                    \n",
    "                    # 按分數分組顯示\n",
    "                    scores_groups = {}\n",
    "                    for stock in last_scan:\n",
    "                        score = stock['total_score']\n",
    "                        if score not in scores_groups:\n",
    "                            scores_groups[score] = []\n",
    "                        scores_groups[score].append(stock)\n",
    "                    \n",
    "                    # 按分數由高到低排序顯示\n",
    "                    for score in sorted(scores_groups.keys(), reverse=True):\n",
    "                        score_emoji = \"🔥\" if score > 0 else \"💥\"\n",
    "                        reply_text += f\"\\n【{score:+d}分】\\n\"\n",
    "                        for stock in scores_groups[score]:\n",
    "                            reply_text += f\"{stock['stock_code']} {stock['stock_name']} {score_emoji}\\n\"\n",
    "                else:\n",
    "                    reply_text = \"最近掃描未發現高分股票（±3分以上）\"\n",
    "            else:\n",
    "                reply_text = \"尚未執行今日掃描，請等待下午2:05自動掃描\"\n",
    "        \n",
    "        elif message in [\"統計\", \"滿分統計\", \"歷史統計\", \"高分統計\"]:\n",
    "            # 生成過去5個交易日的高分統計報告\n",
    "            reply_text = daily_scanner.generate_statistics_report(days=5)\n",
    "        \n",
    "        elif message in [\"7日統計\", \"週統計\"]:\n",
    "            # 生成過去7個交易日的統計\n",
    "            reply_text = daily_scanner.generate_statistics_report(days=7)\n",
    "        \n",
    "        elif message in [\"10日統計\", \"雙週統計\"]:\n",
    "            # 生成過去10個交易日的統計\n",
